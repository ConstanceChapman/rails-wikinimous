<div class="options">
  <div class="links">
    <%= link_to edit_article_path(@article) do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete?"} do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </div>
</div>
<div class="content">
  <h1><%= @article.title %></h1>
  <p><%= @article.content %></p>
</div>
